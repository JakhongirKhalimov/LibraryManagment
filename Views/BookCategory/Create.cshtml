@model LibraryManagementSystem.ViewModels.BookCategoryViweModels.CreateBookCategoryViewModel;
@{
    ViewBag.Title = "Create Book Category";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Book Category</title>
</head>
<body>
    <form class="auth-form" asp-controller="BookCategory" asp-action="Create" method="post">
        <h1>Create Book Category</h1>
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" name="Name" placeholder="Name" required />
        </div>
        <div class="auth-button">
            <button class="btn btn-success" type="submit">Create</button>
            <a class="btn btn-secondary" asp-controller="BookCategory" asp-action="BookCategoryList">Book Categories</a>
        </div>
        @if (ViewData["ValidationMessage"] != null)
        {
            <br />
            <div class="validation-message">@ViewData["ValidationMessage"]</div>
        }

    </form>
</body>
</html>
